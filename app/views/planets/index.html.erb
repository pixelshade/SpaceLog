<div class="container">
  <h1>Listing planets</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Info</th>
      <th>Size</th>
      <th>Rotx</th>
      <th>Roty</th>
      <th>Rotz</th>
      <th>Posx</th>
      <th>Posy</th>
      <th>Posz</th>
      <th>Planetarysystem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td>
        <td><%= planet.info %></td>
        <td><%= planet.size %></td>
        <td><%= planet.rotX %></td>
        <td><%= planet.rotY %></td>
        <td><%= planet.rotZ %></td>
        <td><%= planet.posX %></td>
        <td><%= planet.posY %></td>
        <td><%= planet.posZ %></td>
        <td><%= planet.planetary_system.name if planet.planetary_system %></td>
        <td><%= link_to 'Show', planet %></td>
        <td><%= link_to 'Edit', edit_planet_path(planet) %></td>
        <td><%= link_to 'Destroy', planet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Planet', new_planet_path %>
</div>